<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entity="clr-namespace:GamePlugin"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="GamePlugin.Playground"
    mc:Ignorable="d"
    d:DesignHeight="480" d:DesignWidth="720">
    <Canvas x:Name="PlaygroundCanvas" Width="720" Height="480" MouseLeftButtonDown="PlaygroundCanvas_MouseLeftButtonDown_1" MouseRightButtonDown="PlaygroundCanvas_MouseRightButtonDown_1">
        <Canvas.Background>
            <ImageBrush Stretch="Fill" ImageSource="image/playground.png"/>
        </Canvas.Background>
        <Button x:Name="EndMove" Content="Закончить ход" Click="EndMove_Click_1"/>
        <sdk:Label x:Name="label1" Height="28" Canvas.Left="138" Canvas.Top="10" Width="120"/>
        <sdk:Label x:Name="label2"  Height="28" Canvas.Left="280" Canvas.Top="10" Width="120"/>
    </Canvas>
</UserControl>
